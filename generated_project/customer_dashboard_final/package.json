{
  "name": "customerdashboard",
  "version": "1.0.0",
  "description": "Customer management dashboard with CRUD operations",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "node --test tests/*.test.js",
    "db:migrate": "node scripts/migrate.js",
    "db:setup": "npm run db:migrate",
    "db:validate": "npx tsx scripts/db-schema-validator.ts"
  },
  "dependencies": {
    "@mcp-ui/server": "^5.2.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^16.3.0",
    "pg": "^8.11.0",
    "zod": "^3.22.0",
    "zod-to-json-schema": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
