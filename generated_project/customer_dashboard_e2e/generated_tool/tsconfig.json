{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": [
      "ES2020",
      "DOM"
    ]
  },
  "include": [
    "index.ts",
    "mcp-server.ts",
    "schemas/**/*.ts",
    "mcp-tools/**/*.ts",
    "business-logic/**/*.ts",
    "integration/**/*.ts",
    "mcp-ui-server/**/*.ts",
    "host/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}