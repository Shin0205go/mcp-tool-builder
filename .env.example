# MCP Tool Builder Environment Variables Example
# Copy this file to .env and fill in your actual values
# 
# Anthropic API Key for LLM-based tool generation
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

# Optional: OpenAI API Key (if using OpenAI models)
# OPENAI_API_KEY=your_openai_api_key_here

# Development Settings
NODE_ENV=development
DEBUG=false

# Database Configuration (for generated tools)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mcp_tools

# UI Configuration (for generated tools with UI)
UI_ORIGIN=http://localhost:3000

# Logging Level (debug, info, warn, error)
LOG_LEVEL=info
