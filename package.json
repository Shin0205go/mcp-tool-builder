{
  "name": "mcp-tool-builder",
  "version": "2.0.0",
  "description": "Universal MCP Tool Builder - Generate Production-Ready Tools from Natural Language",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc -p tsconfig.browser.json",
    "generate": "node dist/index.js",
    "generate:simple": "node dist/index-simplified.js",
    "generate:ui": "node dist/index_schema_first.js generate",
    "ui:info": "node dist/index_schema_first.js info",
    "test-tool": "node dist/runtime/test-runner.js",
    "dev": "tsc --watch",
    "config:init": "node dist/scripts/init-config.js",
    "config:validate": "node dist/scripts/validate_config.js",
    "test": "npm run build && node dist/tests/crud_pack_test.js",
    "test:integration": "npm run build && node dist/tests/integration/simple-generation.test.js",
    "test:e2e": "npm run build && node dist/tests/integration/real-llm-e2e.test.js",
    "test:all": "npm run test && npm run test:integration",
    "test:full": "npm run test && npm run test:integration && npm run test:e2e",
    "test:jest": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src"
  },
  "keywords": [
    "mcp",
    "tool-builder",
    "schema-first",
    "capability-driven",
    "business-logic",
    "code-generation",
    "low-code",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/node": "^20.14.2",
    "@types/pg": "^8.10.0",
    "commander": "^11.1.0",
    "dotenv": "^17.2.0",
    "js-yaml": "^4.1.0",
    "pg": "^8.11.3",
    "typescript": "^5.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
